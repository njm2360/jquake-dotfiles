<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
  <menu id="root-menu" label="OpenBox 3">
    <menu id="10" label="App">
      <item label="Firefox">
        <action name="Execute">
	  <execute>/usr/bin/firefox</execute>
        </action>
      </item>
    </menu>
    <menu id="20" label="JQuake">
      <item label="Start">
        <action name="Execute">
          <execute>systemctl --user start jquake</execute>
        </action>
      </item>
      <item label="Stop">
        <action name="Execute">
          <execute>systemctl --user stop jquake</execute>
        </action>
      </item>
      <item label="Restart">
        <action name="Execute">
          <execute>systemctl --user restart jquake</execute>
        </action>
      </item>
      <item label="Manual Start">
        <action name="Execute">
          <execute>~/JQuake/JQuake.sh</execute>
        </action>
      </item>
    </menu>
    <separator/>
    <menu id="30" label="OpenBox">
      <item label="OpenBox Settings">
        <action name="Execute">
          <command>obconf</command>
        </action>
      </item>
      <item label="Reconfigure">
        <action name="Reconfigure"/>
      </item>
    </menu>
    <separator/>
    <menu id="40" label="Exit">
      <item label="Logout">
        <action name="Execute">
          <command>openbox --exit</command>
        </action>
      </item>
      <item label="Reboot">
        <action name="Execute">
          <execute>/sbin/reboot</execute>
        </action>
      </item>
      <item label="Shutdown">
        <action name="Execute">
          <execute>/sbin/poweroff</execute>
        </action>
      </item>
    </menu>
  </menu>
</openbox_menu>
